{% style %}
  
/* home page content block  */
   .Homep_container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Hero Section */
        .Homep_hero {
            background: #F7FAF9;
            padding: 150px 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            border-radius: 30px;
        }

        .Homep_hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 50%, rgba(41, 77, 73, 0.05) 0%, transparent 50%),
                        radial-gradient(circle at 80% 50%, rgba(212, 175, 55, 0.05) 0%, transparent 50%);
            pointer-events: none;
        }

        .Homep_hero-content {
            position: relative;
            z-index: 1;
        }

        h1 {
            font-size: 2.3em;
            font-weight: bold;
            color: #294D49;
            line-height: 1.2;
            margin-bottom: 25px;
            letter-spacing: -0.5px;
        }

        .Homep_hero-subtitle {
            font-size: 1.5em;
            color: #3d6b65;
            font-weight: 500;
            margin-bottom: 40px;
        }

        .Homep_cta-button {
            display: inline-block;
            background: #294D49;
            color: #fff;
            padding: 15px 40px;
            font-size: 1em;
            font-weight: 600;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(41, 77, 73, 0.25);
        }

        .Homep_cta-button:hover {
            background: #1a3a36;
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(41, 77, 73, 0.35);
        }

        /* Features Section */
        .Homep_features {
            padding: 50px 20px;
            background: #fff;
        }

        .Homep_feature-block {
            margin-bottom: 30px;
        }

        .Homep_feature-block:last-child {
            margin-bottom: 0;
        }

        .Homep_feature-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5em;
            color: #294D49;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .Homep_feature-text {
            line-height: 1.8;
            color: #555;
            max-width: 1200px;
            margin: 0 auto 20px;
            text-align:justify;
        }

        /* Why Choose Us Section */
        .Homep_why-section {
            padding: 50px 20px;
            border-radius: 30px;
        }

        .Homep_section-header {
            text-align: center;
            margin-bottom: 70px;
        }

        .Homep_section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8em;
            color: #294D49;
            margin-bottom: 15px;
            font-weight: 900;
        }

        .Homep_why-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 35px;
            margin-top: 50px;
        }

        .Homep_why-card {
            background: #fff;
            padding: 20px 30px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
            border-left: 4px solid #294D49;
        }

        .Homep_why-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        .Homep_why-card h3 {
            font-size: 1.2em;
            color: #294D49;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .Homep_why-card p {
            color: #555;
            line-height: 1.7;
        }

        /* Products Section */
        .Homep_products-section {
            padding: 50px 20px;
            background: #fff;
        }

        .Homep_products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 50px;
        }

        .Homep_product-item {
    display: flex;
    background: #f8faf9;
    padding: 15px 20px;
    border-radius: 10px;
    text-align: center;
    font-weight: 500;
    color: #294D49;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    align-items: center;
    justify-content: center;
        }

        .Homep_product-item:hover {
            background: #294D49;
            color: #fff;
            border-color: #294D49;
            transform: scale(1.05);
        }
        /* Support Section */
        .Homep_support-section {
            padding: 80px 5px;
            text-align: center;
        }

        .Homep_support-section h2 {
            font-family: 'Playfair Display', serif;
            font-size: 1.8em;
            color: #1a3a36;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .Homep_support-section p {
            font-size: 1.2em;
            color: #1a1a1a;
            max-width: 700px;
            margin: 0 auto 30px;
        }


        /* Responsive Design */
        @media (max-width: 768px) {
            h1 {
                font-size: 2em;
            }
                    .Homep_hero {
            padding: 100px 20px;
                    }
            .Homep_hero-subtitle {
                font-size: 1em;
            }

            .Homep_section-title {
                font-size: 1.6em;
            }

            .Homep_feature-title {
                font-size: 1.3em;
            }

            .Homep_hero {
                padding: 40px 5px;
            }

            .Homep_features,
            .Homep_why-section,
            .Homep_products-section{
                padding: 40px 5px;
            }

            .Homep_why-grid {
                grid-template-columns: 1fr;
            }

            .Homep_products-grid {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            }

        }
{% endstyle %}
