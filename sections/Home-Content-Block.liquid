{% style %}
  
/* home page content block  */
   .Homep_container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Hero Section */
        .Homep_hero {
            background: #F9F9F9;
            padding: 150px 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            border-radius: 30px;
        }

        .Homep_hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 50%, rgba(41, 77, 73, 0.05) 0%, transparent 50%),
                        radial-gradient(circle at 80% 50%, rgba(212, 175, 55, 0.05) 0%, transparent 50%);
            pointer-events: none;
        }

        .Homep_hero-content {
            position: relative;
            z-index: 1;
            max-width:800px;
            margin:auto;
        }

        h1 {
            font-size: 2.3em;
            font-weight: bold;
            color: #000;
            line-height: 1.2;
            margin-bottom: 25px;
            letter-spacing: -0.5px;
        }

        .Homep_hero-subtitle {
            font-size: 1.5em;
            color: #000;
            font-weight: 500;
            margin-bottom: 40px;
        }

        .Homep_cta-button {
            display: inline-block;
            background: #294D49;
            color: #fff;
            padding: 15px 40px;
            font-size: 1em;
            font-weight: 600;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .Homep_cta-button:hover {
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(41, 77, 73, 0.35);
        }

        /* Features Section */
        .Homep_features {
            padding: 50px 20px;
            background: #fff;
        }

        .Homep_feature-block {
            margin-bottom: 30px;
        }

        .Homep_feature-block:last-child {
            margin-bottom: 0;
        }

        .Homep_feature-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5em;
            color: #000;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .Homep_feature-text {
            line-height: 1.8;
            color: #555;
            max-width: 1200px;
            margin: 0 auto 20px;
            text-align:justify;
        }

        /* Why Choose Us Section */
        .Homep_why-section {
            padding: 50px 20px;
            border-radius: 30px;
        }

        .Homep_section-header {
            text-align: center;
            margin-bottom: 70px;
        }

        .Homep_section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8em;
            color: #000;
            margin-bottom: 15px;
            font-weight: 900;
        }

        .Homep_why-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 35px;
            margin-top: 50px;
        }


        /* Products Section */
        .Homep_products-section {
            padding: 50px 20px;
            background: #fff;
        }

        .Homep_products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 50px;
        }

        .Homep_product-item {
    display: flex;
    background: #f8faf9;
    padding: 15px 20px;
    border-radius: 10px;
    text-align: center;
    font-weight: 500;
    color: #000;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    align-items: center;
    justify-content: center;
        }

        .Homep_product-item:hover {
            background: #294D49;
            color: #fff;
            border-color: #294D49;
            transform: scale(1.05);
        }
        /* Support Section */
        .Homep_support-section {
            padding: 80px 5px;
            text-align: center;
        }

        .Homep_support-section h2 {
            font-family: 'Playfair Display', serif;
            font-size: 1.8em;
            color: #000;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .Homep_support-section p {
            font-size: 1.2em;
            color: #000;
            max-width: 700px;
            margin: 0 auto 30px;
        }


        /* Responsive Design */
        @media (max-width: 768px) {
            h1 {
                font-size: 2em;
            }
                    .Homep_hero {
            padding: 100px 20px;
                    }
            .Homep_hero-subtitle {
                font-size: 1em;
            }

            .Homep_section-title {
                font-size: 1.6em;
            }

            .Homep_feature-title {
                font-size: 1.3em;
            }

            .Homep_hero {
                padding: 40px 5px;
            }

            .Homep_features,
            .Homep_why-section,
            .Homep_products-section{
                padding: 40px 5px;
            }
            .Homep_products-grid {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            }

        }

        /* Container Styles */
.Homep_why-grid {
  display: grid;
  gap: 24px;
  padding: 40px 20px;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
}

/* Grid Layout for Desktop - 2 Columns */
.parent {
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(4, auto);
  grid-template-areas:
    "div1 div2"
    "div3 div4"
    "div5 div6"
    "div7 div8";
}

/* Grid Item Positioning */
.div1 { grid-area: div1; }
.div2 { grid-area: div2; }
.div3 { grid-area: div3; }
.div4 { grid-area: div4; }
.div5 { grid-area: div5; }
.div6 { grid-area: div6; }
.div7 { grid-area: div7; }
.div8 { grid-area: div8; }

/* Card Styles */
.Homep_why-card {
  background: #ffffff;
  border: 1px solid #e5e5e5;
  border-radius: 12px;
  padding: 15px 20px;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  border-left: 4px solid #294D49;
}

.Homep_why-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  border-color: #d0d0d0;
}

/* Card Title */
.Homep_why-card h3 {
  font-size: 16px;
  /* font-weight: 700; */
  color: #1a1a1a;
  margin: 0 0 10px 0;
  /* line-height: 1.3; */
}

/* Card Description */
.Homep_why-card p {
  color: #4a4a4a;
  margin: 0;
}

/* ============================================
   Responsive Design - Tablet
   ============================================ */

@media (max-width: 1024px) and (min-width: 641px) {
  .Homep_why-grid {
    padding: 32px 16px;
    gap: 20px;
  }

  .parent {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(4, auto);
    grid-template-areas:
      "div1 div2"
      "div3 div4"
      "div5 div6"
      "div7 div8";
  }

  .Homep_why-card {
    padding: 10px 15px;
  }

  .Homep_why-card h3 {
    font-size: 18px;
    margin-bottom: 14px;
  }

}

/* ============================================
   Responsive Design - Mobile
   ============================================ */

@media (max-width: 640px) {
  .Homep_why-grid {
    padding: 24px 0;
    gap: 0;
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    /* Hide scrollbar for cleaner look */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE/Edge */
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  .Homep_why-grid::-webkit-scrollbar {
    display: none;
  }

  .parent {
    display: flex;
    flex-direction: row;
    gap: 16px;
    padding: 0 16px;
    width: max-content;
  }

  .Homep_why-card {
    flex: 0 0 280px; /* Fixed width cards */
    width: 280px;
    padding: 24px 20px;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

  .Homep_why-card h3 {
    font-size: 17px;
    margin-bottom: 12px;
  }

  .Homep_why-card p {
    font-size: 14px;
    line-height: 1.65;
  }

  .Homep_why-card:hover {
    transform: translateY(-2px);
  }
}

/* ============================================
   Alternative Color Schemes (Optional)
   ============================================ */

/* Light Theme Alternative */
.Homep_why-grid.light-theme .Homep_why-card {
  background: #f8f9fa;
  border-color: #dee2e6;
}

/* Dark Theme Alternative */
.Homep_why-grid.dark-theme .Homep_why-card {
  background: #2d2d2d;
  border-color: #404040;
}

.Homep_why-grid.dark-theme .Homep_why-card h3 {
  color: #ffffff;
}

.Homep_why-grid.dark-theme .Homep_why-card p {
  color: #d0d0d0;
}

/* ============================================
   Accessibility Enhancements
   ============================================ */

/* Focus Styles for Keyboard Navigation */
.Homep_why-card:focus-within {
  outline: 2px solid #4a90e2;
  outline-offset: 2px;
}

/* Reduced Motion for Users Who Prefer It */
@media (prefers-reduced-motion: reduce) {
  .Homep_why-card {
    transition: none;
  }
  
  .Homep_why-card:hover {
    transform: none;
  }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
  .Homep_why-card {
    border-width: 2px;
    border-color: #000000;
  }
  
  .Homep_why-card h3 {
    color: #000000;
  }
  
  .Homep_why-card p {
    color: #1a1a1a;
  }
}
{% endstyle %}
