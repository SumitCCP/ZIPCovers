{% style %}
/* Clamp blog hero height on iOS + kill ratio padding */
.blog-post-banner .image-element__wrap {
  /* the theme usually sets inline padding-top to enforce ratio */
  padding: 0 !important;          /* <-- this is the key */
  min-height: 0 !important;
  overflow: hidden;
}

/* In case inline styles still sneak in */
.blog-post-banner .image-element__wrap[style*="padding-top"] {
  padding-top: 0 !important;
}

.blog-post-banner .image-element__wrap img {
  display: block;
  width: 100%;
  height: auto !important;        /* desktop: keep natural aspect */
  max-height: 500px;              /* desktop cap */
  object-fit: cover;
}

/* Mobile: force a predictable height */
@media (max-width: 768px) {
  .blog-post-banner .image-element__wrap {
    max-height: 300px !important;
  }
  .blog-post-banner .image-element__wrap img {
    height: 100% !important;      /* fill the 300px box */
    max-height: none !important;
  }
}

/* Nuke any 100vh/min-height from parent wrappers */
.blog-post-banner .banner__image,
.blog-post-banner .banner__wrapper,
.blog-post-banner [style*="vh"] {
  height: auto !important;
  min-height: 0 !important;
}
{% endstyle %}


