{% paginate search.results by 48 %}
<style>
  .custom-search-section {
    max-width: 1300px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .search-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  @media screen and (min-width: 768px) {
    .search-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .search-product {
    border: 1px solid #eee;
    padding: 16px;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

 .search-product .image-wrapper {
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  background-color: #f5f5f5;
}

.search-product .image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

  .search-product-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    text-decoration: none;
  }

  .search-product-price {
    font-size: 15px;
    color: #666;
  }

  .search-product-button {
    margin-top: auto;
    display: inline-block;
    padding: 10px 16px;
    background-color: #2A4D4A;
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    border-radius: 4px;
    transition: background 0.3s;
     border:2px #2A4D4A solid;
  }

  .search-product-button:hover {
    background-color: #fff;
    border:2px black solid;
  }
   @media (max-width: 768px){
  .custom-search-section {
    padding: 40px 5px;
  }
    .search-grid {
    gap: 10px;
  }
   .search-product {
padding: 8px;
   }
    
  .search-product-button {
padding: 6px 10px;
  }
 }
  .breadcrumb__container{
    padding-top:10px;
  }
  .breadcrumb__wrapper{
    display:flex;
  }
.custom-search-section form {
    margin: auto;
    max-width: 700px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    margin-bottom: 40px;
  border: 2px solid #ccc;
    border-radius: 5px;
  }

  .custom-search-section form input[type="text"] {
    padding: 10px;
    max-width: 100%;
    flex: 1 1 300px;
    border:none;
    outline:none;
  }
.breadcrumb__wrapper {
    display: none;
}
</style>

<div class="custom-search-section">
  {% if search.performed %}
    {% if search.results_count == 0 %}
      <p>No results found for “{{ search.terms }}”.</p>
    {% else %}
      <div class="search-grid">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            <div class="search-product">
              <a href="{{ item.url }}">
              {% if item.featured_image %}
  <div class="image-wrapper">
    <img src="{{ item.featured_image | img_url: '400x' }}" alt="{{ item.title | escape }}">
  </div>
{% endif %}
              </a>
              <a href="{{ item.url }}" class="search-product-title">{{ item.title }}</a>
              <div class="search-product-price">
                {% if item.price_varies %}
                  From {{ item.price | money }}
                {% else %}
                  {{ item.price | money }}
                {% endif %}
              </div>
              <a href="{{ item.url }}" class="search-product-button">Order Now</a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  {% else %}
    <form action="{{ routes.search_url }}" method="get" role="search">
      <input type="text" name="q" placeholder="Search Your Product ..." value="{{ search.terms | escape }}">
      <!-- <button type="submit">Search</button> -->
    </form>
  {% endif %}
</div>

<div class="pagination">
  {% render 'pagination', paginate: paginate %}
</div>
{% endpaginate %}
