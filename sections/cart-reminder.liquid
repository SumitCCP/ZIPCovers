<div id="cart-reminder" style="display: none; padding: 40px 20px; background: #f4f7fc; text-align: center;">
  <h2 style="font-size: 28px; font-weight: bold; margin-bottom: 20px;">Your Cart is waiting</h2>
  <div id="cart-reminder-content" style="display: flex; justify-content: center; gap: 40px; flex-wrap: wrap; align-items: center;">
    <div style="display: flex; align-items: center; gap: 20px;">
      <img id="cart-item-image" src="" alt="" style="width: 120px; border-radius: 10px;">
      <div style="text-align: left;">
        <h3 id="cart-item-title" style="margin: 0; font-size: 18px;"></h3>
        <p id="cart-item-variant" style="margin: 5px 0;"></p>
        <p id="cart-item-qty-price" style="font-weight: bold;"></p>
      </div>
    </div>
    <div style="text-align: left;">
      <p id="cart-summary" style="margin-bottom: 10px;"></p>
      <a href="/checkout" class="btn" style="background-color: #005eff; color: white; padding: 10px 20px; border-radius: 30px; text-decoration: none; font-weight: bold;">Proceed to Checkout ðŸ›’</a><br>
      <a href="/cart" style="display: inline-block; margin-top: 8px;">View Cart</a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    fetch('/cart.js')
      .then(res => res.json())
      .then(cart => {
        if (cart.items.length > 0) {
          const item = cart.items[0];
          document.getElementById('cart-item-image').src = item.image;
          document.getElementById('cart-item-title').textContent = item.product_title;
          document.getElementById('cart-summary').textContent = `${cart.items.length} Item(s) in your cart ($${(cart.total_price / 100).toFixed(2)})`;

          document.getElementById('cart-reminder').style.display = 'block';
        }
      });
  });
</script>
