<script>
  document.addEventListener('DOMContentLoaded', function() {
    const collectionFilter = document.getElementById("collection-filter");

    if (collectionFilter) {
      collectionFilter.addEventListener("change", function () {
        const selectedCollection = collectionFilter.value;
        const collectionWrappers = document.querySelectorAll(".collection-wrapper");

        collectionWrappers.forEach(wrapper => {
          const isMatch = selectedCollection === "all" || wrapper.getAttribute("data-collection") === selectedCollection;
          wrapper.style.display = isMatch ? "block" : "none";
        });
      });
    }

    document.querySelectorAll('.faq-question').forEach(function(button) {
      button.addEventListener('click', function() {
        const answer = this.nextElementSibling;
        const arrow = this.querySelector('.arrow');
        const isOpen = answer.style.display === 'block';
        document.querySelectorAll('.faq-answer').forEach(el => el.style.display = 'none');
        document.querySelectorAll('.faq-question .arrow').forEach(el => el.textContent = '+');

        if (!isOpen) {
          answer.style.display = 'block';
          arrow.textContent = 'âˆ’';
        }
      });
    });
  });
</script>

