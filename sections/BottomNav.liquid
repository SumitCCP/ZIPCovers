<style>
.zc-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 64px;
  background: #f1f1f1;
  border-top: 1px solid #e5e5e5;
  z-index: 999999999;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.05);
}

.zc-bottom-nav-inner {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  height: 100%;
  max-width: 700px;
  margin: 0 auto;
  text-align: center;
}

.zc-nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #000;
  font-size: 13px;
  text-decoration: none;
  transition: all 0.3s ease;
  border:none;
}

.zc-nav-icon {
  width: 22px;
  height: 22px;
  margin-bottom: 4px;
}

.zc-nav-item:hover {
  color: #0c4a6e; /* ZIPCushions brand blue */
  transform: translateY(-2px);
}

@media (min-width: 1200px) {
  .zc-bottom-nav {
    display: none; 
  }
}
#BottomCart{
position:relative;
}
</style>


<div class="zc-bottom-nav">
  <div class="zc-bottom-nav-inner">
    
    <!-- Home -->
    <a href="/" class="zc-nav-item">
      <svg class="zc-nav-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
      </svg>
      <span>Home</span>
    </a>

        <!-- Menu -->
      <button type="button" class="zc-nav-item menu-toggle">
        <svg class="zc-nav-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
          <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <span>Menu</span>
      </button>

    <!-- Cart -->
    <a href="/cart" class="zc-nav-item"  id="BottomCart">
      <svg class="zc-nav-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13l-1.35 2.7A1 1 0 0 0 6.6 17h10.8a1 1 0 0 0 .95-.7L21 9M7 13V6h13M9 21a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm8 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z"/>
      </svg>
      <span>Cart</span>
    </a>

    <!-- Account -->
    <a href="/account" class="zc-nav-item">
      <svg class="zc-nav-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
      </svg>
      <span>Account</span>
    </a>

  </div>
</div>


<script>
  // Bottom nav scroll behavior
  function BottomNav() {
    const nav = document.querySelector('.zc-bottom-nav');
    const BottomCart = document.querySelector('.purchase-details .purchase-details__spb--false');

    nav.style.transform = 'translateY(100%)';
    nav.style.opacity = '0';
    window.addEventListener('scroll', function() {
      if (window.scrollY > 100) {
        nav.style.transform = 'translateY(0)';
        nav.style.opacity = '1';
        BottomCart.style.display= "flex";
      } else {
        nav.style.transform = 'translateY(100%)';
        nav.style.opacity = '0';
      }
    });
  }

  // Menu toggle function
  function MenuToggle() {
    const menuBtn = document.querySelector('.menu-toggle');
    const menu = document.querySelector('.main-menu');


    menuBtn.addEventListener('click', function() {
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    });
  }

  BottomNav();
  MenuToggle();




  // Shopify Cart Count
  fetch('/cart.js')
    .then(res => res.json())
    .then(cart => {
      const count = cart.item_count;
      const BottomcartButton = document.getElementById('BottomCart');
      if (count > 0) {
        const badge = document.createElement('span');
        badge.textContent = count;
        badge.style.position = 'absolute';
        badge.style.top = '5';
        badge.style.right = '25%';
        badge.style.background = '#2A4D4A';
        badge.style.color = 'white';
        badge.style.fontSize = '12px';
        badge.style.padding = '2px 6px';
        badge.style.borderRadius = '50%';
        BottomcartButton.appendChild(badge);
      }
    });
</script>