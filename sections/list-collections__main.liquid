{% assign collections_to_show = "indoor-cushions,outdoor-cushions,custom-chair-cushions,sofa-and-couch-cushions,custom-seat-bench-cushions,window-cushions,boat-cushions,custom-cushion-covers,custom-outdoor-furniture-covers,ready-to-ship-accent-pillows,owlee-replacement-cushions,brown-jordan-replacement-cushions,north-cape-replacement-cushions" | split: "," %}
<div class="collection-banner">
  <img src="https://zipcushions.com/cdn/shop/collections/indoor-Collection_web_Banner_1920x600.webp?v=1758538567" alt="zipcovers Collections">
</div>
 <div class="collection-banner-mobile">
  <img src="https://cdn.shopify.com/s/files/1/0614/7453/7714/files/indoor-Collection_app_Banner.webp?v=1758538558" alt="zipcovers Collections">
</div> 


{% comment %} <h1>Custom Replacement Cushions for Top Outdoor Furniture Brands</h1> {% endcomment %}

<div class="main-container">

<div id="collections-container">
  {% for collection_handle in collections_to_show %}
    {% assign current_collection = collections[collection_handle] %}
    
    <div class="collection-wrapper" data-collection="zipcovers.com/collections/{{ collection_handle }}">
    <div class="collection-title"><h2>{{ current_collection.title }}</h2><a href="{{ collection_handle }}">Explore All</a></div>


      <div class="collection-grid">
        {% for product in current_collection.products limit: 4 %}
          <div class="product-item" data-title="{{ product.title }}">
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            </a>
            <p class="product-title">{{ product.title }}</p>
            <p class="product-price">{{ product.price | money }}</p>
            <a href="{{ product.url }}" class="view-product-btn">Customize Now</a>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="mobile-explore-btn"><a href="zipcovers.com/collections/{{ collection_handle }}">Explore All</a></div>
  {% endfor %}
</div>


<div class="skcontainer">
  <div class="calltoaction">
<p>Are you not able to find your perfect match?</p>
    <h3>Call us on <b>720-627-7225</b> or Contact our customer support via chat (blue button on the bottom)</h3>
  </div>

</div>
</div>


