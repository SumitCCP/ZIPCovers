{% comment %}
  Partner / Trade Enquiry Form
{% endcomment %}
<section class="zc-partner-form">
  <div class="zc-partner-form__wrap">
    <h2 class="zc-partner-form__title">
      {{ section.settings.heading | default: "Partner with ZIPCushions ‚Äî Custom Comfort Starts Here" }}
    </h2>
    <p class="zc-partner-form__sub">
      {{ section.settings.subheading | default: "Connect with our trade experts to unlock exclusive pricing, personalized support, and tailored cushion solutions that empower your projects and drive sales." }}
    </p>

    {% form 'contact', id: 'PartnerContactForm', class: 'zc-partner-form__form' %}
      {% if form.posted_successfully? %}
        <div class="zc-partner-form__notice zc-partner-form__notice--success">
          {{ section.settings.success_text }}
        </div>
      {% endif %}

      {% if form.errors %}
        <div class="zc-partner-form__notice zc-partner-form__notice--error">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <!-- honeypot -->
      <div style="position:absolute;left:-5000px;" aria-hidden="true">
        <label for="partner_hp">Leave this empty</label>
        <input type="text" id="partner_hp" name="contact[trap]">
      </div>

      <div class="zc-partner-form__grid">
        <!-- First Name -->
        <div class="zc-field">
          <label for="FirstName">First Name<span>*</span></label>
          <div class="zc-inputwrap">
            <input id="FirstName" name="contact[first_name]" type="text" placeholder="Enter here" required>
            <span class="zc-icon">üë§</span>
          </div>
        </div>

        <!-- Last Name -->
        <div class="zc-field">
          <label for="LastName">Last Name<span>*</span></label>
          <div class="zc-inputwrap">
            <input id="LastName" name="contact[last_name]" type="text" placeholder="Enter here" required>
            <span class="zc-icon">üë§</span>
          </div>
        </div>

        <!-- Company Name -->
        <div class="zc-field">
          <label for="CompanyName">Company Name<span>*</span></label>
          <div class="zc-inputwrap">
            <input id="CompanyName" name="contact[company_name]" type="text" placeholder="Enter here" required>
            <span class="zc-icon">üèõ</span>
          </div>
        </div>

        <!-- Company URL -->
        <div class="zc-field">
          <label for="CompanyUrl">Company URL</label>
          <div class="zc-inputwrap">
            <input id="CompanyUrl" name="contact[company_url]" type="url" placeholder="Enter here">
            <span class="zc-icon">üèõ</span>
          </div>
        </div>

        <!-- Email -->
        <div class="zc-field">
          <label for="Email">Email Address<span>*</span></label>
          <div class="zc-inputwrap">
            <input id="Email" name="contact[email]" type="email" placeholder="Enter here" required value="{{ customer.email }}">
            <span class="zc-icon">‚úâÔ∏è</span>
          </div>
        </div>

        <!-- Phone -->
        <div class="zc-field">
          <label for="Phone">Phone Number<span>*</span></label>
          <div class="zc-inputwrap">
            <input id="Phone" name="contact[phone]" type="tel" placeholder="Enter here" pattern="[0-9+\-\s()]*" required>
            <span class="zc-icon">üìû</span>
          </div>
        </div>

        <!-- Industry (select) -->
        <div class="zc-field">
          <label for="Industry">Choose Industry<span>*</span></label>
          <div class="zc-inputwrap zc-inputwrap--select">
            {% assign industries = section.settings.industries | default: "Other" | split: "," %}
            <select id="Industry" name="contact[industry]" required>
              {% for ind in industries %}
                {% assign clean = ind | strip %}
                <option value="{{ clean }}">{{ clean }}</option>
              {% endfor %}
            </select>
            <span class="zc-icon zc-icon--select">‚ñæ</span>
          </div>
        </div>

        <!-- Industry manual -->
        <div class="zc-field">
          <label for="IndustryManual">Add industry manually</label>
          <div class="zc-inputwrap">
            <input id="IndustryManual" name="contact[industry_manual]" type="text" placeholder="Enter here">
            <span class="zc-icon">‚úèÔ∏è</span>
          </div>
        </div>

<div class="zc-field">
  <label class="zc-label" for="ResaleCertificate">Resale Certificate (must be a legible copy in pdf or jpg format)<span>*</span></label>
  <input
    class="zc-input"
    type="file"
    id="ResaleCertificate"
    name="contact[resale_certificate]"
    accept=".pdf, .jpg, .jpeg"
    required
  >
</div>
        <!-- Comments -->
        <div class="zc-field">
          <label for="Comments">Comments</label>
          <textarea id="Comments" name="contact[comments]" placeholder="Enter here" rows="4"></textarea>
        </div>
      </div>

      <label class="zc-consent">
        <input type="checkbox" name="contact[consent]" value="yes" checked>
        <span>I would like to accept the call, email and text for next steps</span>
      </label>

      <div class="zc-actions">
        <button type="submit" class="zc-btn-primary">
          {{ section.settings.button_label | default: "Submit Application" }}
        </button>
      </div>
      <input type="hidden" name="contact[bdny_sales_tag]" value="BDNYSales">
    {% endform %}
  </div>

  <style>
    .zc-partner-form {
      padding: 60px 16px 80px;
      background: #fff;
    }
    .zc-partner-form__wrap {
      max-width: 1150px;
      margin: 0 auto;
    }
    .zc-partner-form__title {
      text-align: center;
      font-size: clamp(1.9rem, 3vw, 2.5rem);
      font-weight: 700;
      margin-bottom: 6px;
    }
    .zc-partner-form__sub {
      text-align: center;
      max-width: 720px;
      margin: 0 auto 42px;
      color: #444;
      line-height: 1.5;
    }
    .zc-partner-form__form {
      background: #fff;
    }
    .zc-partner-form__notice {
      margin-bottom: 16px;
      border-radius: 6px;
      padding: 10px 12px;
      font-size: 14px;
    }
    .zc-partner-form__notice--success {
      background: #ecfdf3;
      color: #166534;
      border: 1px solid #bbf7d0;
    }
    .zc-partner-form__notice--error {
      background: #fef2f2;
      color: #991b1b;
      border: 1px solid #fecaca;
    }
    .zc-partner-form__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 18px 26px;
    }
    .zc-field {
      text-align: left;
    }
    .zc-field--full {
      grid-column: 1 / -1;
    }
    .zc-field label {
      display: block;
      margin-bottom: 6px;
      font-size: 14px;
      font-weight: 500;
      color: #000;
    }
    .zc-field label span {
      color: #dc2626;
      margin-left: 3px;
    }
    .zc-inputwrap {
      position: relative;
    }
    .zc-inputwrap input,
    .zc-inputwrap select,
    .zc-field textarea {
      width: 100%;
      border: 1px solid #e5e5e5;
      border-radius: 6px;
      padding: 14px 40px 14px 14px;
      font-size: 14px;
      background: #fff !important;
      transition: border .15s ease, box-shadow .15s ease;
    }
    .zc-inputwrap select {
      padding-right: 40px;
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
      cursor: pointer;
    }
    .zc-inputwrap input:focus,
    .zc-inputwrap select:focus,
    .zc-field textarea:focus {
      border-color: #22c55e;
      box-shadow: 0 0 0 3px rgba(34,197,94,0.12);
      outline: none;
    }
    .zc-icon {
      position: absolute;
      right: 14px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 14px;
      opacity: 0.65;
      pointer-events: none;
    }
    .zc-icon--select {
      font-size: 12px;
    }
    .zc-field textarea {
      min-height: 160px;
      resize: vertical;
      padding-right: 14px;
    }
    .zc-consent {
      display: flex;
      align-items: center;
      gap: 10px;
      margin: 24px 0 26px;
      font-size: 13px;
      color: #111;
    }
    .zc-consent input[type="checkbox"] {
      width: 16px;
      height: 16px;
      accent-color: #000;
    }
    .zc-actions {
      text-align: center;
    }
    .zc-btn-primary {
      width: min(100%, 520px);
      background: #000;
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 16px 18px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: transform .05s ease, opacity .15s ease;
    }
    .zc-btn-primary:hover {
      opacity: .95;
    }
    .zc-btn-primary:active {
      transform: translateY(1px);
    }
    @media (max-width: 900px) {
      .zc-partner-form__grid {
        grid-template-columns: 1fr;
      }
      .zc-btn-primary {
        width: 100%;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Partner / Trade Enquiry",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Partner with ZIPCushions ‚Äî Custom Comfort Starts Here" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Connect with our trade experts to unlock exclusive pricing, personalized support, and tailored cushion solutions." },
    { "type": "text", "id": "industries", "label": "Industries (comma separated)", "default": "Interior Design & Home Decor,Hospitality & Commercial Spaces,Religious & Community Institutions,Outdoor Living & Landscaping,Architecture & Real Estate Development,Specialty & Recreational Spaces,Other" },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "Submit Application" },
    { "type": "text", "id": "success_text", "label": "Success message", "default": "Thank you! Our team will get in touch with you." }
  ],
  "presets": [
    { "name": "Partner / Trade Enquiry" }
  ]
}
{% endschema %}
