<div class="video-slider">
<div class="video-slider-inner container">
<div class="video-heading-box"><h2>{{ section.settings.heading }}</h2></div>
<div class="section-padding">
	 <div class="my-slider2 center-slider">
	    {%- for block in section.blocks -%}
		 <div class="item">
			 {% if block.settings.video != blank %}
                    <video src="{{block.settings.video.sources[1].url}}" playsinline="playsinline" loop="loop" controls="controls" preload="metadata" poster="{{ block.settings.bg-image | img_url:'master'}}"></video>
             {% endif %}
		 </div>
		{% endfor %}
	</div>
</div>
</div>
</div>

{% schema %}
{
    "name": "Custom Video slider",
    "settings": [
      {
         "type": "text",
         "id": "heading",
         "label": "Heading"
      }
    ],
	"blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
	    {
           "type": "video",
           "id": "video",
           "label": "A Shopify-hosted video"
        },
        {
           "type": "image_picker",
           "id": "bg-image",
           "label": "Custom Background Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Video slider",
      "blocks": [
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.section-padding {
    width: 100%;
    margin: 0 auto;
    padding: 40px 0 60px;
}
.video-heading-box {
    text-align: center;
    width: 100%;
}
.video-heading-box h2 {
    font-size: 30px;
    text-align: center;
     font-family: Lato-SemiBold;
}  
/*======================*/
.center-slider .slick-slide{
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transition: all 0.4s ease-in-out;
}
.center-slider .slick-slide,
.center-slider .slick-slide[aria-hidden="true"]:not(.slick-cloned) ~ .slick-cloned[aria-hidden="true"] {
  transform: scale(0.8, 0.8);
  transition: all 0.4s ease-in-out;
}

/* Active center slide (You can change anything here for cenetr slide)*/
.center-slider .slick-center,
.center-slider .slick-slide[aria-hidden="true"]:not([tabindex="-1"]) + .slick-cloned[aria-hidden="true"] {
  transform: scale(1.1);
  background-color: #000000;
}
.center-slider .slick-current.slick-active {
    transform: scale(1);
    background-color: #000000;
    border-radius: 12px;
    overflow: hidden;
}
.center-slider video {
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
}
.center-slider .slick-initialized .slick-slide {
    display: block;
}
.center-slider .slick-next, .center-slider .slick-prev {
    top: unset;
    width: 50px;
    height: 50px;
    bottom: -72px;
}
.center-slider .slick-prev {
    left: 45%;
}
.center-slider .slick-next {
    right: 48%;
}
.center-slider  .slick-prev:before {
    content: ''!important;
    width: 30px;
    height: 30px;
    background: url(https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Right.png?v=1744197352);
    background-size: contain;
    position: absolute;
    transform: rotate(180deg);
}
.center-slider .slick-next:before {
    content: ''!important;
    width: 30px;
    height: 30px;
    background: url(https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Right.png?v=1744197352);
    background-size: contain;
    position: absolute;
    background-repeat: no-repeat;
} 
@media (max-width: 767px) {
.video-slider-inner.container {
    padding-top: 40px;
}
.video-heading-box h2 {
    font-size: 28px;
    line-height: 34px;
    text-align: left;
    width: 80%;
    padding: 0 20px;
}
.center-slider .slick-next, .center-slider .slick-prev {
    top: -90px;
    width: 50px;
    height: 50px;
    bottom: unset;
}
.center-slider .slick-prev {
    left: unset;
    right: 60px;
}
.center-slider .slick-next {
    right: 20px;
}
.section-padding {
    padding-bottom: 40px!important;
}  
}
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
$(document).ready(function(){
      $('.my-slider2').slick({
        slidesToShow: 5,
        slidesToScroll: 1,
        arrows: true,
        dots: false,
        speed: 300,
        infinite: true,
        autoplaySpeed: 5000,
        autoplay: true,
        centerMode: true,
		centerPadding: '20px',
        responsive: [
      {
        breakpoint: 991,
        settings: {
          slidesToShow: 3,
        }
      },
      {
        breakpoint: 767,
        settings: {
          slidesToShow: 1,
          centerPadding: '20%',
        }
      }
    ]
      });
    });
</script>
