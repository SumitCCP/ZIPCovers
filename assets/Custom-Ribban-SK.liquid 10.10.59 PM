<script>
  var close_ribban = document.getElementById("Custom_ribban");

  function adjustBodyPadding() {
    if (close_ribban.style.display === "none") {
      document.body.style.paddingTop = "0px";
    } else {
      if (window.innerWidth <= 760) {
        document.body.style.paddingTop = "50px";
      } else {
        document.body.style.paddingTop = "40px";
      }
    }
  }

  function closeRibban() {
    close_ribban.style.display = "none";
    localStorage.setItem("ribbanClosedTime", new Date().getTime());
    adjustBodyPadding();
  }

  function checkRibbanStatus() {
    var closedTime = localStorage.getItem("ribbanClosedTime");
    var currentTime = new Date().getTime();
    
    if (closedTime && currentTime - closedTime < 24 * 60 * 60 * 1000) {
      close_ribban.style.display = "none";
    } else {
      close_ribban.style.display = "block";
    }
    adjustBodyPadding();
  }

  checkRibbanStatus();
  window.addEventListener('resize', adjustBodyPadding);
</script>

