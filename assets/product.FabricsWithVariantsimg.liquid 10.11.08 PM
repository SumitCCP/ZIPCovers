<!-- Add this script after the existing scripts: -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const fabricRadios = document.querySelectorAll('.fabric-option-radio');
    const mainImg = document.getElementById('mainProductImage');
    const unitPriceElement = document.getElementById('unitPrice');
    const qtyInput = document.querySelector('.qty-input');
    const totalPriceElement = document.getElementById('dynamicTotalPrice');
    const addToCartForm = document.querySelector('.PDP_AddToCartBlock form input[name="id"]');

    function updateVariantSelection(radio) {
      const variantId = radio.value;
      const variantPrice = radio.dataset.price;
      const variantImage = radio.dataset.image;

      // Update hidden input for add to cart
      if (addToCartForm) {
        addToCartForm.value = variantId;
      }

      // Update main image if variant has image
      if (variantImage && variantImage !== 'null') {
        mainImg.src = variantImage;
      }

      // Update unit price
      if (unitPriceElement && variantPrice) {
        unitPriceElement.dataset.price = variantPrice;
        const priceInDollars = parseInt(variantPrice) / 100;
        unitPriceElement.textContent = new Intl.NumberFormat('en-US', {
          style: 'currency',
          currency: 'USD',
        }).format(priceInDollars);
      }

      // Update total price
      updateTotalPrice();
    }

    function updateTotalPrice() {
      const qty = parseInt(qtyInput.value) || 2;
      const unitPriceCents = parseInt(unitPriceElement.dataset.price) || 0;
      const totalCents = unitPriceCents * qty;
      const totalDollars = totalCents / 100;

      if (totalPriceElement) {
        totalPriceElement.textContent = new Intl.NumberFormat('en-US', {
          style: 'currency',
          currency: 'USD',
        }).format(totalDollars);
      }
    }

    // Listen to fabric design changes
    fabricRadios.forEach(radio => {
      radio.addEventListener('change', function() {
        if (this.checked) {
          updateVariantSelection(this);
        }
      });
    });

    // Initialize with first selected variant
    const checkedRadio = document.querySelector('.fabric-option-radio:checked');
    if (checkedRadio) {
      updateVariantSelection(checkedRadio);
    }

    // Update total price on quantity change
    qtyInput.addEventListener('input', updateTotalPrice);
    document.querySelector('.qty-btn.plus')?.addEventListener('click', () => {
      setTimeout(updateTotalPrice, 10);
    });
    document.querySelector('.qty-btn.minus')?.addEventListener('click', () => {
      setTimeout(updateTotalPrice, 10);
    });
  });
</script>



<script>
   {% comment %} quantity selector {% endcomment %}
  document.addEventListener('DOMContentLoaded', function () {
     const minusBtn = document.querySelector('.qty-btn.minus');
     const plusBtn = document.querySelector('.qty-btn.plus');
     const qtyInput = document.querySelector('.qty-input');

     minusBtn.addEventListener('click', () => {
       const current = parseInt(qtyInput.value);
       if (current > 2) qtyInput.value = current - 1;
     });

     plusBtn.addEventListener('click', () => {
       const current = parseInt(qtyInput.value);
       qtyInput.value = current + 1;
     });
   {% comment %} end quantity selector {% endcomment %}
    });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mainImg = document.getElementById('mainProductImage');
    const thumbnails = Array.from(document.querySelectorAll('.PDP_images img'));
    const nextBtn = document.querySelector('.gallery-arrow.next');
    const prevBtn = document.querySelector('.gallery-arrow.prev');
    const PDP_images = document.querySelector('.PDP_images');

    let currentIndex = 0;

        function updateArrows() {
        if (currentIndex === 0) {
            prevBtn.style.display = "none";
        } else {
            prevBtn.style.display = "block";
        }

        if (currentIndex === thumbnails.length - 1) {
            nextBtn.style.display = "none";
        } else {
            nextBtn.style.display = "block";
        }
    }

    function updateMainImage(index) {
      const newImg = thumbnails[index];
      mainImg.src = newImg.dataset.large;
      thumbnails.forEach((img) => img.classList.remove('active'));
      newImg.classList.add('active');
      currentIndex = index;
      updateArrows(); 
    }

    nextBtn.addEventListener('click', () => {
      const nextIndex = (currentIndex + 1) % thumbnails.length;
      updateMainImage(nextIndex);
      PDP_images.scrollBy({left:60 , behaviour:"smooth"});
    });

    prevBtn.addEventListener('click', () => {
      const prevIndex = (currentIndex - 1 + thumbnails.length) % thumbnails.length;
      updateMainImage(prevIndex);
      PDP_images.scrollBy({left:-60 , behaviour:"smooth"});
    });

    thumbnails.forEach((thumb, index) => {
      thumb.addEventListener('click', () => updateMainImage(index));
    });

    // Touch swipe (mobile)
    let startX = 0;
    mainImg.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
    });

    mainImg.addEventListener('touchend', (e) => {
      const endX = e.changedTouches[0].clientX;
      const diff = startX - endX;

      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          // Swipe left
          const nextIndex = (currentIndex + 1) % thumbnails.length;
          updateMainImage(nextIndex);
        } else {
          // Swipe right
          const prevIndex = (currentIndex - 1 + thumbnails.length) % thumbnails.length;
          updateMainImage(prevIndex);
        }
      }
    });
  });
</script>
