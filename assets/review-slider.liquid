<div class="custom-review-slider">
    <div class="review-slider-inner ">
	    <div class="heading-box section ">
		    <div class="h-top">
			   <h2>{{ section.settings.heading }}</h2>
			   <p>{{ section.settings.subheading }}</p>
			</div>
			<div class="h-bottom">
			    <img src="https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Frame_237539.png?v=1744176534">
				<a href="https://www.google.com/search?hl=en-IN&gl=in&q=ZIPCushions,+1499+W+120th+Ave+%23110,+Westminster,+CO+80234,+United+States&ludocid=7108218071866550994&lsig=AB86z5Whr9IHG7MQvG2g5CAMwnHo">
				<p>{{ section.settings.text_01 }}<img src="https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Group_83.png?v=1744176535"></p>
				</a>
			</div>
		</div>
		<div class="review-slider">
		    <div class="slider-row my-slider">
			    {%- for block in section.blocks -%}
			    <div class="slider-box">
                    <div class="slider-box-inner">
				    <img src="https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Frame_237539_1.png?v=1744176534">
					<div class="text">{{ block.settings.text }}</div>
					<div class="user">{{ block.settings.user }}</div>
                    </div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

<style>
.custom-review-slider{
   width: 100%;
   padding-top: {{section.settings.p_t}}px;
   padding-bottom: {{section.settings.p_b}}px;
}
.review-slider-inner {
    width: 100%;
    display: flex;
    max-width: 1260px;
    margin: 0 auto;
}
.slider-box {
    padding: 0 6px;
}
.heading-box {
    width: 360px;
    background: #294D4A;
    padding: 20px;
    border-radius: 12px;
    height: 250px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.h-top h2 {
    font-size: 28px;
    color: #fff;
    font-family: Lato-SemiBold;
}
.h-top p {
    font-size: 16px;
    color: #FFFFFFCC;
}
.h-bottom img {
    width: 112px;
}
.h-bottom p {
    font-size: 16px;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 10px;
}
.h-bottom p img {
    width: 32px;
}.heading-box{
   width: 360px;
   background:#294D4A;
   padding: 20px;
   border-radius: 12px;
}
.review-slider {
    width: 70%;
}
.slider-box-inner {
    background: #F7F8FB;
    min-height: 250px;
    border-radius: 12px;
    padding: 20px;
}
.slider-box-inner .text {
    font-size: 15px;
    line-height: 21px;
    color: #000000;
    margin-bottom: 10px;
}
.slider-box-inner img {
    width: 112px;
    margin-bottom: 10px;
}
.user p {
    font-size: 14px;
    font-weight: 600;
    color: #000;
}
.custom-review-slider  .slick-list {
    padding:0 20% 0 0 !important;
}
@media (max-width: 1280px) {
.review-slider-inner {
    width: 98%;
}
.heading-left {
    padding-left: 20px;
} 
}  
@media (max-width: 767px) {
.review-slider-inner {
    width: 100%;
    flex-direction: column;
}

.h-top h2 {
    font-size: 28px;
    color: #000000;
    text-align: center;
}
.h-top p {
    font-size: 16px;
    color: #00000099;
    text-align: center;
    margin: 6px 0;
}
.h-bottom p {
    color: #000000;
}
.h-bottom img {
    width: 112px;
    filter: invert(1);
}
.h-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
}
.h-bottom p img {
    width: 32px;
    filter: none;
}
.heading-box {
    width: 100%;
    background: transparent;
    padding: 0px;
    border-radius: 0px;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 30px;
    padding: 0 20px;
}
.review-slider {
    width: 100%;
} 
.custom-review-slider {
    padding-bottom: 10px!important;
    padding-top: 30px!important;
} 
.slider-box-inner {
    min-height: 294px;
}
}  
</style>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
$(document).ready(function(){
      $('.my-slider').slick({
        slidesToShow: 2,
        slidesToScroll: 1,
        arrows: false,
        dots: false,
        speed: 300,
        infinite: true,
        autoplaySpeed: 5000,
        autoplay: true,
        centerMode: true,
        responsive: [
      {
        breakpoint: 991,
        settings: {
          slidesToShow: 3,
        }
      },
      {
        breakpoint: 767,
        settings: {
          slidesToShow: 1,
          centerPadding: '20%',
        }
      }
    ]
      });
    });
</script>


{% schema %}
{
  "name": "Review slider",
  "settings": [
        {
             "type": "text",
             "id": "heading",
             "label": "Heading"
        },
		{
             "type": "text",
             "id": "subheading",
             "label": "Subeading"
        },
		{
             "type": "text",
             "id": "text_01",
             "label": "Text"
        },
	    {
             "type": "range",
             "id": "p_t",
             "default": 50,
             "label": "Padding Top",
             "max": 300,
             "min": 0,
             "step": 5,
             "unit": "Px"
        }, 
	    {
             "type": "range",
             "id": "p_b",
             "default": 50,
             "label": "Padding Bottom",
             "max": 300,
             "min": 0,
             "step": 5,
             "unit": "Px"
        }
	
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text"
        },
	    {
          "type": "text",
          "id": "user",
          "label": "User"
       }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review slider",
      "blocks": [
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
