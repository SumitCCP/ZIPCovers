<script>
$(document).ready(function () {
    $('.acc-gallery li:lt(6)').show();
    $('.less').hide();
    var items =  9;
    var shown =  2;
    $('.more').click(function () {
        $('.less').show();
        shown = $('.acc-gallery li:visible').length+6;
        if(shown< items) {
          $('.acc-gallery li:lt('+shown+')').show(300);
        } else {
          $('.acc-gallery li:lt('+items+')').show(300);
          $('.more').hide();
        }
    });
    $('.less').click(function () {
        $('.gallery li').not(':lt(6)').hide(300);
        $('.more').show();
        $('.less').hide();
    });
});
</script>


<script type="application/ld+json">
