<script>
document.getElementById("collection-filter").addEventListener("change", filterProducts);
document.getElementById("product-filter").addEventListener("change", filterProducts);

function filterProducts() {
  var selectedCollection = document.getElementById("collection-filter").value;
  var selectedType = document.getElementById("product-filter").value.toLowerCase();
  
  var collectionWrappers = document.querySelectorAll(".collection-wrapper");

  collectionWrappers.forEach(function(wrapper) {
    var isCollectionMatch = selectedCollection === "all" || wrapper.getAttribute("data-collection") === selectedCollection;
    var products = wrapper.querySelectorAll(".product-item");

    var hasVisibleProducts = false;
    
    products.forEach(function(product) {
      var productTitle = product.getAttribute("data-title").toLowerCase();
      var isTypeMatch = selectedType === "all" || productTitle.includes(selectedType);

      if (isCollectionMatch && isTypeMatch) {
        product.style.display = "block";
        hasVisibleProducts = true;
      } else {
        product.style.display = "none";
      }
    });

    wrapper.style.display = hasVisibleProducts ? "block" : "none";
  });
}
</script>
