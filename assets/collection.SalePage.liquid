/* Pagination Styles */
.pagination {
display: flex;
justify-content: center;
align-items: center;
margin-top: 40px;
}
.page-link, .current-page {
padding: 10px 15px;
margin: 0 5px;
text-decoration: none;
border: 2px solid #2A4D4A;
border-radius: 5px;
color: #2A4D4A;
font-weight: bold;
background: white;
transition: all 0.3s;
}
.page-link:hover {
background: #2A4D4A;
color: white;
}
.current-page {
background: #2A4D4A;
color: white;
}
.prev, .next {
font-weight: bold;
}


