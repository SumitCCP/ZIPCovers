{% comment %}
** FAQ - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign id = section.id %}
{% assign title = section.settings.title %}
{% assign img_border_radius = section.settings.border_radius %}
{% comment %} Layout {% endcomment %}
{% assign width = section.settings.width %}
{% assign position = section.settings.position %}
{% assign animation = section.settings.animation %}
{% assign padding_top = section.settings.padding_top %}
{% assign padding_bottom = section.settings.padding_bottom %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  #shopify-section-{{ id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    {% if width == 'wide' %}
      width: 100%;
    {% endif %}
  }
  {% render 'css-loop',
          css: section_css,
          id: id
  %}
  {% render 'css-loop',
          css: custom_css,
          id: id
  %}
{% endstyle %}

{% capture icon_set %}
{% if settings.toggle_icon_style == 'carets' %}
  {% render 'icon',
          name: 'down-caret',
          icon_class: 'icon--rotate'
  %}
{% else %}
  {% render 'icon',
          name: 'plus',
          icon_class: 'icon--active'
  %}
  {% render 'icon', name: 'minus' %}
{% endif %}
{% endcapture %}

<section class="Faq section
        {{ css_class }}
        is-width-{{ width }}
		is-positon-{{ position }}
        has-gutter-enabled
        {% if width == 'wide' %}
          equal-columns--outside-trim
        {% endif %}
        has-background"
        {% if animation != "none" %}data-scroll-class="{{ animation }}"{% endif %}>
  <div class="container">
    {% render 'heading',
            title: title,
            heading_tag: 'h2',
            context: 'faq',
            text_alignment: 'left'
    %}

    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          {% assign image = true %}
        {% endif %}
      {% endfor %}
    {% endif %}

    <div class="page-faq__column-wrap container column-wrapper">
      <div class="{% if image == true %}one-half{% else %}one-whole{% endif %} medium-down--one-whole column faq faq__column-1">
        {% if section.blocks.size > 0 %}
          <dl class="{{ section.settings.css_class }}
                    faq-accordion
                    accordion-icon--{{ settings.toggle_icon_style }}">
            {% for block in section.blocks %}
              {% if block.type == 'content' %}

                {% if block.settings.title != blank %}
                  <dt>
                    <button class="accordion-style--{{ settings.toggle_icon_style }} accordion__button" type="button" aria-controls="panel-{{ block.id }}" aria-expanded="true">
					  {%- if block.settings.icon_img_01 != blank -%}
                        <img src="{{ block.settings.icon_img_01 | img_url: 'master'  }}">
                      {%- endif -%}
                      {{ block.settings.title }}
					  {{ icon_set }}
                       <img src="https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Group_75.png?v=1744192036" class="i-close">
                       <img src="https://cdn.shopify.com/s/files/1/0614/7453/7714/files/Group_74.png?v=1744192036" class="i-open">
                    </button>
                  </dt>
                  <dd id="panel-{{ block.id }}" aria-hidden="false">
                    <div class="content">
                      {{ block.settings.answer }}
                    </div>
                  </dd>
                {% endif %}

              {% elsif block.type == 'heading' %}

                {% if block.settings.title != blank %}
                  <h2 class="title faq-title">{{ block.settings.title }}</h2>
                {% endif %}

              {% endif %}

            {% endfor %}
          </dl>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <div class="one-half medium-down--one-whole column faq faq--image faq__column-2">
			  <div class="img-top">
			      <h2>{{ block.settings.img_heading }}</h2>
				  <div class="img-txt">{{ block.settings.img_text }}</div>
			  </div>
              {% if block.settings.image != blank %}
                  {% render 'image-element',
                          image: block.settings.image,
                          alt: block.settings.image.alt,
                          stretch_width: true
                  %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<script data-theme-editor-load-script src="{{ 'z__jsFAQ.js' | asset_url }}"></script>

<style>
.faq-accordion  img.i-close {
    position: absolute;
    top: 18px;
    right: 0;
    width: 20px!important;
    height: 16px;
    object-fit: contain;
}
.faq-accordion dt button[aria-expanded=true] img.i-close {
    display: none;
}
.faq-accordion dt button[aria-expanded=true] img.i-open {
    display: block;
    position: absolute;
    top: 18px;
    right: 0;
    width: 20px!important;
    height: 16px;
    object-fit: contain;
}
.faq-accordion  span.icon.icon--rotate {
    display: none;
}
@media (max-width: 767px) {
.faq-accordion  img.i-close,
.faq-accordion dt button[aria-expanded=true] img.i-open {
    width: 16px!important;
}
}
.img-right img {
    border-radius: 8px;
}
</style>


