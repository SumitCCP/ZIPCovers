<script>
  /* Review strip: arrows + auto-scroll */
  (function () {
    const scroller = document.querySelector(".reviewCards");
    const btnPrev = document.querySelector(".blog-scroll-btn--prev");
    const btnNext = document.querySelector(".blog-scroll-btn--next");
    if (!scroller) return;

    const getGap = () => {
      const s = getComputedStyle(scroller);
      return parseFloat(s.columnGap || s.gap) || 0;
    };
    const getStep = () => {
      const card = scroller.querySelector(".reviewCard");
      if (!card) return 0;
      return card.getBoundingClientRect().width + getGap();
    };

    const scrollByCards = (n = 1) =>
      scroller.scrollBy({ left: getStep() * n, behavior: "smooth" });

    const atEnd = () =>
      Math.ceil(scroller.scrollLeft + scroller.clientWidth) >=
      scroller.scrollWidth - 1;

    btnPrev && btnPrev.addEventListener("click", () => scrollByCards(-1));
    btnNext &&
      btnNext.addEventListener("click", () => {
        if (atEnd()) scroller.scrollTo({ left: 0, behavior: "smooth" });
        else scrollByCards(1);
      });

    const INTERVAL = 5000;
    let timer;
    const start = () => {
      stop();
      timer = setInterval(() => {
        atEnd()
          ? scroller.scrollTo({ left: 0, behavior: "smooth" })
          : scrollByCards(1);
      }, INTERVAL);
    };
    const stop = () => {
      if (timer) clearInterval(timer);
    };

    start();
    scroller.addEventListener("mouseenter", stop);
    scroller.addEventListener("mouseleave", start);
    scroller.addEventListener("focusin", stop);
    scroller.addEventListener("focusout", start);

    window.addEventListener("resize", () => {
      setTimeout(
        () =>
          scroller.scrollTo({ left: scroller.scrollLeft, behavior: "smooth" }),
        50
      );
    });
  })();
</script>