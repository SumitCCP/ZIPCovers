<script>
(function() {
  'use strict';
  
  function initializeTabs() {
    const descriptionContent = document.querySelector('.Description-Content');
    if (!descriptionContent) return;

    // Get all h4 elements
    const h2Elements = descriptionContent.querySelectorAll('h2');
    if (h2Elements.length === 0) return;

    // Create tabs header
    const tabsHeader = document.createElement('div');
    tabsHeader.className = 'tabs-header';

    // Create wrapper for tab contents
    const tabsWrapper = document.createElement('div');
    tabsWrapper.className = 'tabs-content-wrapper';

    // Process each h4 and create tabs
    h2Elements.forEach((h2, index) => {
      const tabId = `tab-${index}`;
      
      // Create tab button
      const tabButton = document.createElement('button');
      tabButton.className = 'tab-button';
      if (index === 0) tabButton.classList.add('active');
      tabButton.setAttribute('data-tab', tabId);
      tabButton.textContent = h2.textContent;
      tabsHeader.appendChild(tabButton);

      // Create tab content section
      const tabContentSection = document.createElement('div');
      tabContentSection.className = 'tab-content-section';
      tabContentSection.id = tabId;
      if (index === 0) tabContentSection.classList.add('active');

      // Add the h2 to the section
      tabContentSection.appendChild(h2.cloneNode(true));

      // Get all content until next h2 or end
      let currentElement = h2.nextElementSibling;
      while (currentElement && currentElement.tagName !== 'H4') {
        tabContentSection.appendChild(currentElement.cloneNode(true));
        currentElement = currentElement.nextElementSibling;
      }

      tabsWrapper.appendChild(tabContentSection);
    });

    // Clear original content and add new structure
    descriptionContent.innerHTML = '';
    descriptionContent.appendChild(tabsHeader);
    descriptionContent.appendChild(tabsWrapper);

    // Add click event listeners
    const tabButtons = tabsHeader.querySelectorAll('.tab-button');
    const tabContents = tabsWrapper.querySelectorAll('.tab-content-section');

    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');

        // Remove active class from all buttons and contents
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));

        // Add active class to clicked button and corresponding content
        this.classList.add('active');
        document.getElementById(targetTab).classList.add('active');
      });
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeTabs);
  } else {
    initializeTabs();
  }
})();
</script>


 

    