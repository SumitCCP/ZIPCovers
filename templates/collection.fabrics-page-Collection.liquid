{% assign product_types = "Sunbrella,Agora,Blue Sky,Stamskin,Fusion Prints,Bling Foils,Merino,Lush chenille" | split: "," %}
{% assign colors = "Red,Blue,Green,Yellow,Black,White,Grey,Brown,Beige" | split: "," %}

<div class="subheading">
    <span><h1>Sunbrella® Fabrics</h1></span>
    <span><p>Explore a vast selection of premium Sunbrella® fabrics, thoughtfully designed for durability, vibrant color, and effortless maintenance.</p></span>
</div>

<!-- Search Bar -->
<div class="search-container">
    <input type="text" id="search-input" placeholder="Search fabrics...">
</div>

{% paginate collections['sunbrella-fabrics'].products by 50 %}
    <div id="collections-container">
        {% for product in collections['sunbrella-fabrics'].products %}
            <div class="product-item" 
                 data-title="{{ product.title | downcase }}" 
                 data-color="{{ product.metafields.custom.color | downcase }}" 
                 data-type="{{ product.product_type | downcase }}">
                <a href="{{ product.url }}">
                    <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                </a>
                <p class="product-title">{{ product.title }}</p>
                        {% assign yard_variant = product.variants | where: "title", "Yard" | first %}

                <p class="product-price">{{ yard_variant.price | money }} / Yard</p>
                <a href="{{ product.url }}" class="view-product-btn">View</a>
            </div>
        {% endfor %}
    </div>
    
    <div class="pagination">{{ paginate | default_pagination }}</div>
{% endpaginate %}
</div>
<script>
// Search Functionality
const searchInput = document.getElementById("search-input");
searchInput.addEventListener("input", function() {
    let query = searchInput.value.toLowerCase();
    let products = document.querySelectorAll(".product-item");
    
    products.forEach(product => {
        let title = product.getAttribute("data-title");
        if (title.includes(query)) {
            product.style.display = "block";
        } else {
            product.style.display = "none";
        }
    });
});
</script>

