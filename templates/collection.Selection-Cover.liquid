}

.collection-description tbody td {
  padding: 14px 16px;
  border: 1px solid #ccc;
  vertical-align: middle;
}
.collection-description tbody td p {
  text-align: left;
}

/* Zebra striping */
.collection-description tbody tr:nth-child(even) td {
  background: #fafafa;
}

/* Rounded top corners */
.collection-description table th:first-child {
  border-top-left-radius: 8px;
}
.collection-description table th:last-child {
  border-top-right-radius: 8px;
}

/* Highlight important cells */
.collection-description td.is-highlight {
  background: #fff7ed;
  border-bottom-color: #fde7d5;
  font-weight: 600;
}

/* Align right helper */
.collection-description th[data-align="right"],
.collection-description td[data-align="right"] {
  text-align: right;
}

/* ✅ Responsive tweaks for mobile */
@media (max-width: 768px) {
  .collection-description table {
    font-size: 14px;
    overflow-x: scroll;
  }
  .collection-description th,
  .collection-description td {
    padding: 10px 12px;
  }
}

