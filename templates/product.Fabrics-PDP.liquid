<script>
  document.addEventListener('DOMContentLoaded', function () {
    const qtyInput = document.querySelector('.qty-input');
    const unitPriceElement = document.getElementById('unitPrice');
    const totalPriceElement = document.getElementById('dynamicTotalPrice');

    const unitPriceCents = parseInt(unitPriceElement.dataset.price); // Shopify gives price in cents

    function updatePriceDisplay() {
      const qty = parseInt(qtyInput.value);
      const totalCents = unitPriceCents * qty;
      const totalDollars = totalCents / 100;

      totalPriceElement.textContent = new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: 'USD',
      }).format(totalDollars);
    }

    // ✅ Fix price on back button return
    window.addEventListener('pageshow', () => {
      setTimeout(updatePriceDisplay, 50);
    });

    // Update on quantity change
    qtyInput.addEventListener('change', updatePriceDisplay);
    document.querySelector('.qty-btn.plus')?.addEventListener('click', () => {
      setTimeout(updatePriceDisplay, 10);
    });
    document.querySelector('.qty-btn.minus')?.addEventListener('click', () => {
      setTimeout(updatePriceDisplay, 10);
    });
  });
</script>
