/* Collection Description */
.collection-description {
  max-width: 1200px;
  margin: 50px auto;
  padding: 20px;
  color: #000;
}
 
[data-layouthub="section"],
[data-layouthub="section"] * {
  margin-left: 0!important;
  color: #000!important;
}
 
/* Paragraphs */
.collection-description p {
  margin: 0 0 15px 0;
  line-height: 1.6;
  font-size: 18px;
}
 
.collection-description p:last-child {
  margin-bottom: 0;
}
 
/* Headings */
.collection-description h1,
.collection-description h2,
.collection-description h3,
.collection-description h4,
.collection-description h5,
.collection-description h6 {
  margin: 25px 0 15px 0;
  font-weight: 600;
  line-height: 1.3;
}
 
.collection-description h1 { font-size: 32px; }
.collection-description h2 { font-size: 28px; }
.collection-description h3 { font-size: 24px; }
.collection-description h4 { font-size: 20px; }
.collection-description h5 { font-size: 18px; }
.collection-description h6 { font-size: 16px; }
 
/* Unordered Lists (Bullet Points) */
.collection-description ul {
  margin: 15px 0;
  padding-left: 25px;
  list-style-type: disc;
}
 
.collection-description ul li {
  margin-bottom: 8px;
  line-height: 1.6;
  padding-left: 5px;
}
 
/* Nested unordered lists */
.collection-description ul ul {
  margin: 8px 0;
  padding-left: 20px;
  list-style-type: circle;
}
 
.collection-description ul ul ul {
  list-style-type: square;
}
 
/* Ordered Lists (Numbered) */
.collection-description ol {
  margin: 15px 0;
  padding-left: 25px;
  list-style-type: decimal;
}
 
.collection-description ol li {
  margin-bottom: 8px;
  line-height: 1.6;
  padding-left: 5px;
}
 
/* Nested ordered lists */
.collection-description ol ol {
  margin: 8px 0;
  padding-left: 20px;
  list-style-type: lower-alpha;
}
 
.collection-description ol ol ol {
  list-style-type: lower-roman;
}
 
/* Links */
.collection-description a {
  color: #0066cc;
  text-decoration: underline;
  transition: color 0.2s ease;
}
 
.collection-description a:hover {
  color: #004499;
}
 
/* Strong/Bold */
.collection-description strong,
.collection-description b {
  font-weight: 700;
}
 
/* Emphasis/Italic */
.collection-description em,
.collection-description i {
  font-style: italic;
}
 
/* Blockquotes */
.collection-description blockquote {
  margin: 20px 0;
  padding: 15px 20px;
  border-left: 4px solid #ddd;
  background-color: #f9f9f9;
  font-style: italic;
}
 
/* Code */
.collection-description code {
  background-color: #f4f4f4;
  padding: 2px 6px;
  border-radius: 3px;
  font-family: monospace;
  font-size: 14px;
}
 
.collection-description pre {
  background-color: #f4f4f4;
  padding: 15px;
  border-radius: 5px;
  overflow-x: auto;
  margin: 15px 0;
}
 
.collection-description pre code {
  padding: 0;
  background-color: transparent;
}
 
/* Horizontal Rule */
.collection-description hr {
  border: none;
  border-top: 1px solid #ddd;
  margin: 30px 0;
}
 
/* Mobile Responsive */
@media (max-width: 600px) {
  .collection-description {
    max-width: 98%;
    padding: 5px;
  }
  
  .collection-description h1 { font-size: 26px; }
  .collection-description h2 { font-size: 22px; }
  .collection-description h3 { font-size: 20px; }
  .collection-description h4 { font-size: 18px; }
  .collection-description h5 { font-size: 16px; }
  .collection-description h6 { font-size: 15px; }
  
  .collection-description p {
    font-size: 15px;
    margin-bottom: 12px;
  }
  
  .collection-description ul,
  .collection-description ol {
    padding-left: 20px;
  }
  
  .collection-description li {
    margin-bottom: 6px;
  }
}
