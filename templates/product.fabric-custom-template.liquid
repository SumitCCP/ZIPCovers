{% endif %}





<script>
  // Keywords to match in image URLs
  const blockedKeywords = ['dpo_custom_option'];

  // MutationObserver to remove image elements after they're added to the DOM
  const dpoImageBlockObserver = new MutationObserver(() => {
    document.querySelectorAll('img').forEach((img) => {
      const src = img.getAttribute('src') || '';
      if (blockedKeywords.some(keyword => src.includes(keyword))) {
        console.warn('Blocked DPO image:', src);
        img.remove();
      }
    });
  });

  dpoImageBlockObserver.observe(document.body, { childList: true, subtree: true });

  // Optional: block background-image CSS too
  const styleBlocker = () => {
    document.querySelectorAll('[style]').forEach((el) => {
      const bg = el.style.backgroundImage || '';
      if (blockedKeywords.some(keyword => bg.includes(keyword))) {
        console.warn('Blocked DPO background image:', bg);
        el.remove();
      }
    });
  };

  // Run style blocker on load and every few seconds
  document.addEventListener('DOMContentLoaded', styleBlocker);
  setInterval(styleBlocker, 2000); // Keep checking in case content loads late
</script>
